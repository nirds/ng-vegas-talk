= form_for @todo do |f|
  - if @todo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo.errors.count, "error")} prohibited this todo from being saved:"
      %ul
        - @todo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :done
    = f.check_box :done
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :order
    = f.number_field :order
  .actions
    = f.submit 'Save'
